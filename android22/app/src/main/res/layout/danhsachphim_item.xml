<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/ibHinhAnh"
        android:layout_width="149dp"
        android:layout_height="132dp"
        android:background="#050505"
        android:onClick="chitiet"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvTenPhim"
        android:layout_width="106dp"
        android:layout_height="20dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ibHinhAnh" />

    <TextView
        android:id="@+id/tvTheLoai"
        android:layout_width="106dp"
        android:layout_height="23dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTenPhim" />

    <TextView
        android:id="@+id/tvSoDiem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:background="#F44336"
        android:text="TextView"
        android:textColor="#070707"
        app:layout_constraintEnd_toEndOf="@+id/ibHinhAnh"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/ibHinhAnh"
        app:layout_constraintTop_toTopOf="@+id/ibHinhAnh" />

    <TextView
        android:id="@+id/tvDoTuoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/ibHinhAnh"
        app:layout_constraintEnd_toEndOf="@+id/tvSoDiem"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/ibHinhAnh"
        app:layout_constraintTop_toBottomOf="@+id/tvSoDiem"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>